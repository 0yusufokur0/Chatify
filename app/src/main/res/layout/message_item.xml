<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#686868"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/messageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/messageTxtRight"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="message"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/messageDateRight"
        android:layout_below="@id/messageTxtRight"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/messageLeft"
        android:layout_below="@id/messageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/messageTxtLeft"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="message"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/messageDateLeft"
            android:layout_below="@id/messageTxtLeft"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>