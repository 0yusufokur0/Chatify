<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/text_background"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/messageTxtRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="message" />

        <TextView
            android:id="@+id/messageDateRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageTxtRight"
            android:layout_alignParentEnd="true"
            android:text="date"
            app:layout_constraintStart_toEndOf="@+id/messageTxtRight"
            app:layout_constraintTop_toBottomOf="@+id/messageTxtRight" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/messageLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_background"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageRight">

        <TextView
            android:id="@+id/messageTxtLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="message"
            app:layout_constraintStart_toEndOf="@+id/messageDateLeft" />

        <TextView
            android:id="@+id/messageDateLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageTxtLeft"
            android:layout_alignParentEnd="true"
            android:text="date"

            app:layout_constraintTop_toBottomOf="@+id/messageTxtLeft"
            tools:layout_editor_absoluteX="15dp" />
        <!--            app:layout_constraintStart_toEndOf="@+id/messageTxtLeft"
            app:layout_constraintTop_toBottomOf="@+id/messageTxtLeft" -->
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

